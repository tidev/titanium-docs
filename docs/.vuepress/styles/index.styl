.member-list
  & h2, h3, h4
    margin-top: -3.1rem;
    padding-top: 4.6rem;
    margin-bottom: 0;

  .member-header
    display flex

    &>h3, h4
      flex-grow 1

.proxy-meta
  margin-top 10px
  >.proxy-meta-name
    font-size: 14px
    color: #666666
    text-align right
  >.proxy-meta-value
    margin: 0.5rem 0 0.9rem;
    text-align right
.proxy-metas
  &>:last-child
    >.proxy-meta-value
      margin-bottom 0

.type-signature
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace;
  font-size: 0.85rem
  padding: 0.8rem 0.6rem
  border-left 5px solid #eaecef

.custom-block
  &.tip
    border-color #19AEEF !important

.go-to-top
  color $accentColor !important